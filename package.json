{
  "name": "mesa-subgraph",
  "license": "UNLICENSED",
  "scripts": {
    "compile": "hardhat compile",
    "docker-up": "docker-compose up -d",
    "pretest": "npm run compile && npm run docker-up",
    "prepare:mainnet": "mustache config/mainnet.json subgraph.template.yaml > subgraph.yaml",
    "prepare:rinkeby": "mustache config/rinkeby.json subgraph.template.yaml > subgraph.yaml",
    "test": "jest --verbose",
    "codegen": "graph codegen",
    "build": "graph build",
    "deploy": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ adamazad/mesa",
    "create-local": "graph create --node http://localhost:8020/ adamazad/mesa",
    "remove-local": "graph remove --node http://localhost:8020/ adamazad/mesa",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 adamazad/mesa",
    "typechain-build": "typechain --target ethers-v5 --outDir src/contracts abis/*.json"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.19.0",
    "@graphprotocol/graph-ts": "0.19.0",
    "@openzeppelin/contracts": "^3.4.0",
    "@typechain/ethers-v5": "^5.0.0",
    "@types/mustache": "^4.1.1",
    "axios": "^0.21.1",
    "ethers": "^5.0.31",
    "mustache": "^4.1.0",
    "typechain": "^4.0.1",
    "typescript": "^4.1.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "hardhat": "^2.0.10",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.1"
  }
}
